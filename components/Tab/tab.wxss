.tabs_title{
  display: flex;
  font-size: 28rpx;
  padding: 0 20rpx 30rpx;
}
.title_item{
  color: #333;
  padding: 15rpx 0;
  display: flex;
  flex: 1;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}
.active{
  color:#CCAB6A;
  font-weight: bold;
  position: relative;
  font-size: 40rpx;
}
.active::after{
  content: '';
  width: 28rpx;
  height: 8rpx;
  border-radius: 4rpx;
  background-color: #CCAB6A;
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translate(-50%, 0);
}